<div class="row">
  <div class="col s12">
    <div class="card white">
      <div class="card-content black-text">
        <span class="card-title">Новости о <%=@prefix%>: <%=@name%></span>
      </div>
    </div>
  </div>
</div>
<% @response.each do |article| %>
  <div class="row">
    <div class="col s12">
      <div class="card white">
        <div class="card-content black-text">
          <span class="card-title"><%=article['title']%></span>
          <p><%=article['body']%></p>
        </div>
        <div class="card-action">
          <a href=<%=article['url']%> target="_blank">Читать далее</a>
        </div>
      </div>
    </div>
  </div>
<%end%>
